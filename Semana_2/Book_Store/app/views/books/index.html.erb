<h1> Books </h1>

<h2> Listing Books: </h2>

<% @books.each do |book| %>
		<p><%= book.name %>
	<%= link_to 'Show', book_path(book) %>
	<%= link_to 'Edit', edit_book_path(book) %>
	<%= link_to 'Destroy', book_path(book), method: :delete, data: {confirm: 'Are you sure?'} %></p>
<% end %>

<%= link_to 'New book', new_book_path %>