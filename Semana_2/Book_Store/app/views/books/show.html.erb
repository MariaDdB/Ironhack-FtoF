<h1> 
	<strong> Title: </strong>
	<%= @book.name %>
</h1>

<p>
	<strong> Description </strong>
	<%= @book.description %>
<p>

<p>
	<strong> Price: </strong>
	<%= @book.price %> $
</p>

<p>
	<strong> Rating: </strong>
	<%= @book.rating %>

<h2>Rate this book.</h2>
	<%= form_for @book, url: {action: "update"} do |f| %>
    	<%= f.number_field(:rating, in: 1..5, step: 0.5) %>
    <%= f.submit "Rating" %>
<% end %>

<%= link_to 'Edit', edit_book_path(@book) %>
<%= link_to 'Back', books_path %>