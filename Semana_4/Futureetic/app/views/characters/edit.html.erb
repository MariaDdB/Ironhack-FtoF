<h1> Editing Character: </h1>

<%= form_for :character, url: character_path(@character), method: :patch do |c| %>
	<p>
    	<%= c.label :name %><br>
    	<%= c.text_field :name %>
  	</p>

  	<p>
    	<%= c.label :age %><br>
    	<%= c.text_field :age %>
  	</p>

   	<p>
    	<%= c.label :favourite_food %><br>
    	<%= c.text_field :favourite_food %>
  	</p>

  	<p>
    	<%= c.label :programming_language %><br>
    	<%= c.text_field :programming_language %>
  	</p>

   	<p>
    	<%= c.label :hobbies %><br>
    	<%= c.text_field :hobbies %>
  	</p>

  	<p>
    	<%= c.submit %>
  	</p>
<% end %>

<%= link_to 'Back', characters_path %>